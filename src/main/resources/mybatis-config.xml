<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>
    <typeAliases>
        <typeAlias type="com.fuhao.pojo.Student" alias="student"/>
        <typeAlias type="com.fuhao.pojo.Seat" alias="seat"/>
        <typeAlias type="com.fuhao.pojo.Root" alias="root"/>
        <typeAlias type="com.fuhao.pojo.Teacher" alias="teacher"/>
        <typeAlias type="com.fuhao.pojo.Message" alias="message"/>
        <typeAlias type="com.fuhao.pojo.News" alias="news"/>
    </typeAliases>

    <mappers>
        <mapper resource="com/fuhao/dao/UserMapper.xml"/>
        <mapper resource="com/fuhao/dao/MessageMapper.xml"/>
        <mapper resource="com/fuhao/dao/AppointMapper.xml"/>
        <mapper resource="com/fuhao/dao/QuitMapper.xml"/>
        <mapper resource="com/fuhao/dao/RootMapper.xml"/>
    </mappers>
</configuration>